#!/bin/dash
# exec <<<$'a\n lol\r\v\t\b\e'

readonly beg="$(printf '\033[7m')"
readonly end="$(printf '\033[27m')"

# od -v -An -tu1 | while read -r input && test -n "$input"
# do
# 	for chr in $input
# 	do
# 		if test $chr -lt 32 || test $chr -ge 127; then
# 			printf '\033[7m\x%x\033[27m' $chr
# 		else
# 			printf %b "\\`printf %o $chr`"
# 		fi
# 	done
# done
for arg do
	printf '%5d: ' $(( argno += 1 ))

	# Check for length in case `arg` has `NUL` in it
	while test ${#arg} -ne 0; do
		case $arg in
		[[:print:]]*)
			printf %c "$arg" ;;
		*)
			printf '\033[7m\\x%02X\033[27m' "'$arg" ;;
		esac
		arg=${arg#?}
	done
	echo
done
