#!/bin/csh -f

alias die 'echo \!* > /dev/stderr ; exit 1'

if ( $#argv < 3 ) then
   die "usage: $0:t input-base output-base numbers [...]"
endif

alias convert 'eval "              \\
switch ( $\!:1 )                   \\
case x:                            \\
   set \!:2base = 16               \\
   breaksw                         \\
case o:                            \\
   set \!:2base = 8                \\
   breaksw                         \\
case d:                            \\
   set \!:2base = 10               \\
   breaksw                         \\
case b:                            \\
   set \!:2base = 2                \\
   breaksw                         \\
case "\"\"":                       \\
case *[^0-9]*:                     \\
   die argument \#\!:1 is not a   \\\
      number or xodb >/dev/stderr  \\
default:                           \\
   set \!:2base = $\!:1            \\
endsw"'

convert 1 i
convert 2 o

shift; shift
bc <<EOS
obase=$obase
ibase=$ibase
`echo "$argv" | tr 'a-z ' 'A-Z\n'`
