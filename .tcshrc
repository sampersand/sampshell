#!/bin/tcsh
if ( $?prompt ) then # only do load up this file if a prompt is defined
alias cdd 	'cd `dirname \!*`'
alias reload 	'source ~/.tcshrc'
alias h 	history
alias gs 	'git status'
alias +x 	'chmod +x \!*'
alias md 	'mkdir -p \!*:q && \cd -- \!*q'
alias ls 	'ls -AFqhGb'
alias s		subl
alias ss	'subl --create'
alias cdss      'cd $SampShell_ROOTDIR:q'

set cdpath = ( ~/.cdpath )
# TODO, look at highlight
set globstar noclobber printexitvalue rmstar autolist correct \
	dunique backslash_quote highlight pushdsilent


set shell	= /bin/dash
set symlinks	= chase
set echo_style	= both
set complete	= Enhance
set histchars	= '\!,'
set histdup	= prev
set history     = 1000
set savehist	= ( 10000 merge lock )
set histfile	= ~/.tcsh_history
set ignoreeof	= 2

set listflags	= A color
alias ls 'ls-F'

unset promptchars # MACOS SETS THIS FOR SOME REASON
set prompt = '%S%B[%b%p \\\!%U\!%u ?%? L%$SHLVL%B]%b %c03 %n%B%#%b%s '


# Ignore `>`, eg from the examples
alias '>' = ''

alias helpcommand '\!:1 --help'
